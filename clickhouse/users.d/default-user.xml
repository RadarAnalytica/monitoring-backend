<clickhouse>
  <!-- Docs: <https://clickhouse.com/docs/en/operations/settings/settings_users/> -->
  <users>
    <!-- Remove default user -->
    <default remove="remove">
    </default>

    <radar>
      <profile>default</profile>
      <networks>
        <ip>::/0</ip>
      </networks>
      <password from_env="CLICKHOUSE_PASSWORD"/>
      <quota>default</quota>
      <access_management>0</access_management>
    </radar>

    <radar_read_only>
      <profile>readonly</profile>
      <networks>
        <ip>::/0</ip>
      </networks>
      <password from_env="READ_ONLY_PASSWORD"/>
      <quota>default</quota>
    </radar_read_only>

  </users>
</clickhouse>
